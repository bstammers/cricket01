<h2>Innings for </h2>

<p id="notice"><%= notice %></p>

<%= link_to "Back", matches_path %>&nbsp;&nbsp;
<%= link_to "New Innings", new_match_inning_path(session[:match]) %>&nbsp;&nbsp;

<table width="100%">
	<tr>
		<th>&nbsp;</th>
		<th>Inning No</th>
		<th>Batting Team</th>
		<th>Bowling Team</th>
		<th>Score</th>
		<th>Match</th>
	</tr>
	<% @innings.each do |inning| %>
		<tr>
			<td><%= inning.id %></td>
			<td><%= inning.inning_no %></td>
			<td><%= inning.batting_team %></td>
			<td><%= inning.bowling_team %></td>
			<td><%= inning.score %></td>
			<td><%= inning.match_id %></td>
			<td>
				<%= link_to "Show", inning_path(inning.id) %>&nbsp;&nbsp;
				<%= link_to "Edit", edit_inning_path(inning.id) %>&nbsp;&nbsp;
				<%= link_to "Delete", inning_path(inning.id), method: :delete %>&nbsp;&nbsp;
				<%= link_to "Batsmen", inning_batters_path(inning.id) %>&nbsp;&nbsp;
				<%= link_to "Bowlers", inning_bowlers_path(inning.id) %>&nbsp;&nbsp;
				<%= link_to "Overs", inning_overs_path(inning.id) %>&nbsp;&nbsp;
				<%= link_to "FOW", inning_fall_of_wickets_path(inning.id) %>&nbsp;&nbsp;
			</td>
		</tr>
	<% end %>
</table>

